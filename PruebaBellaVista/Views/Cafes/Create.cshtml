@model PruebaBellaVista.Models.Producto

@{
    ViewData["Title"] = "Crear";
}

<h1>Create</h1>

<h4>Nuevo Producto de Café</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group mb-3">
                <label asp-for="NombreProducto" class="control-label">Nombre del Producto</label>
                <input asp-for="NombreProducto" class="form-control" />
                <span asp-validation-for="NombreProducto" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="IdTipocafe" class="control-label">Tipo de Café</label>
                <select asp-for="IdTipocafe" class="form-control" asp-items="ViewBag.TiposCafe">
                    <option value="">-- Seleccionar opción --</option>
                </select>
                <span asp-validation-for="IdTipocafe" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Presentacion" class="control-label">Presentación</label>
                <input asp-for="Presentacion" class="form-control" />
                <span asp-validation-for="Presentacion" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Precio" class="control-label">Precio (Q)</label>
                <input asp-for="Precio" class="form-control" />
                <span asp-validation-for="Precio" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Guardar Producto" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}