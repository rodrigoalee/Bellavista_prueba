@model IEnumerable<PruebaBellaVista.Models.Producto>

@{
    ViewData["Title"] = "Inventario Completo";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>Administración Total de Inventario</h1>
        <a asp-action="Index" class="btn btn-primary">
            <i class="bi bi-arrow-left"></i> Volver a Lista Activa
        </a>
    </div>

    <div class="card shadow-sm">
        <div class="card-body">
            <table class="table table-hover table-striped">
                <thead class="table-dark">
                    <tr>
                        <th>@Html.DisplayNameFor(model => model.NombreProducto)</th>
                        <th>@Html.DisplayNameFor(model => model.Presentacion)</th>
                        <th>@Html.DisplayNameFor(model => model.Precio)</th>
                        <th>@Html.DisplayNameFor(model => model.Activo)</th>
                        <th class="text-center">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr class="@(item.Activo == false ? "table-secondary text-muted" : "")">
                            <td>@item.NombreProducto</td>
                            <td>@item.Presentacion</td>
                            <td>Q @item.Precio</td>
                            <td>
                                @if (item.Activo == true)
                                {
                                    <span class="badge bg-success">Activo</span>
                                }
                                else
                                {
                                    <span class="badge bg-danger">Inactivo</span>
                                }
                            </td>
                            <td class="text-center">
                                <div class="btn-group">
                                    <a asp-action="Edit" asp-route-id="@item.IdProducto" class="btn btn-sm btn-warning">
                                        Editar
                                    </a>

                                    @if (item.Activo == false)
                                    {
                                        <form asp-action="Reactivar" asp-route-id="@item.IdProducto" method="post" class="ms-1">
                                            <button type="submit" class="btn btn-sm btn-success">Activar</button>
                                        </form>
                                    }

                                    <a asp-action="Delete" asp-route-id="@item.IdProducto" class="btn btn-sm btn-danger ms-1">
                                        Eliminar
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>