@model PruebaBellaVista.Models.Producto

@{
    ViewData["Title"] = "Eliminar";
}

<h1>Eliminar Producto</h1>

<h3 class="text-danger">¿Estás seguro que deseas eliminar este producto?</h3>
<div>
    <h4>Detalles del Producto</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Nombre
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.NombreProducto)
        </dd>
        <dt class="col-sm-2">
            Presentación
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Presentacion)
        </dd>
        <dt class="col-sm-2">
            Precio
        </dt>
        <dd class="col-sm-10">
            Q. @Html.DisplayFor(model => model.Precio)
        </dd>
        <dt class="col-sm-2">
            Tipo de Café (ID)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.IdTipocafe)
        </dd>
        <dt class="col-sm-2">
            Estado
        </dt>
        <dd class="col-sm-10">
            @if (Model.Activo == true)
            {
                <span class="text-success">Activo</span>
            }
            else
            {
                <span class="text-danger">Inactivo</span>
            }
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="IdProducto" />
        <input type="submit" value="Confirmar Eliminación" class="btn btn-danger" /> |
        <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
    </form>
</div>